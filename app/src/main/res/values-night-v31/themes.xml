<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.KiwiTalk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_deep</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/brown_deep</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- custom color-->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceDark">@color/grey1</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceLight">@color/grey5</item>
        <item name="colorOnSurfaceVariant">@color/green_deep</item>

        <!-- Splash screen-->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_splash_dark</item>
    </style>
</resources>