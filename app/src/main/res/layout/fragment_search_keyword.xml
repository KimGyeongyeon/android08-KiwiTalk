<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.kiwi.kiwitalk.ui.keyword.SearchKeywordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.keyword.SearchKeywordFragment">

        <Toolbar
            android:id="@+id/tb_searchKeyword_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:navigationIcon="@drawable/ic_backarrow_48"
            android:title="키워드검색"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_searchKeyword_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택된 키워드"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:visibility="@{viewmodel.selectedKeyword.size() &lt;= 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/sv_searchKeyword_selectedKeywordList"
            app:layout_constraintBottom_toBottomOf="@id/sv_searchKeyword_selectedKeywordList"/>

        <ScrollView
            android:id="@+id/sv_searchKeyword_selectedKeywordList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/tv_searchKeyword_selected"
            app:layout_constraintTop_toBottomOf="@id/tb_searchKeyword_title"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_searchKeyword_selectedKeywordList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_keyword"
                tools:itemCount="3"/>
        </ScrollView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_searchKeyword_keywordCategoryList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_searchKeyword_selectedKeywordList"
            tools:itemCount="3"
            tools:listitem="@layout/item_keywordcategory" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
